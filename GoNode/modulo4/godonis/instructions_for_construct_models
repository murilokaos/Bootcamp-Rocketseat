Models Construct:
  - User
    - username
      - notNullable
      - unique
    - email
      - notNullable
      - unique
    - password
      - notNullable
    - token
    - timestamp token_created_at
  - Token
    - user_id
      - unsigned
      - references id
      - inTable users
    - token
      - notNullable
      - unique
      - index
    - type
      - notNullable
    - is_revoked
      defaultTo false
  - File
    - file
      - notNullable
    - name
      - notNullable
    - type
    - subtype
  - Project
    - user_id (relacionamento com users)
      - integer
      - unsigned
      - inTable users
      - references
      - onUpdate: cascade
      - onDelete: set null
    - title
      - notNullable
    - description
      -notNullable
  - Task
    - user_id
      - ...Project (user_id)
    - project_id
      - ...user_id
      - inTable projects
      - onDelete cascade
    - title
      - notNullable
    - description
    - timestamp due_date
    - file_id
      - ...user_id
        - inTable files
  - UserAddress
    - user_id
      - ...Project (user_id)
    - street
      - notNullable
    - number
      - notNullable
